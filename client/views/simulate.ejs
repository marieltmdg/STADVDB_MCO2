<h1>Concurrency & Replication Simulator</h1>

<div class="alert alert-info">
    <strong>Test Cases:</strong>
    <ul class="mb-0">
        <li><strong>Case 1:</strong> Concurrent reads on the same row from all nodes</li>
        <li><strong>Case 2:</strong> One write and two reads on the same row</li>
        <li><strong>Case 3:</strong> Concurrent writes on the same row from all nodes</li>
    </ul>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label for="isolationLevel" class="form-label">Select Isolation Level:</label>
        <select id="isolationLevel" class="form-select">
            <option value="READ_UNCOMMITTED">Read Uncommitted</option>
            <option value="READ_COMMITTED">Read Committed</option>
            <option value="REPEATABLE_READ" selected>Repeatable Read</option>
            <option value="SERIALIZABLE">Serializable</option>
        </select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Actions:</label>
        <div>
            <button id="case1" class="btn btn-primary me-2">Run Case 1</button>
            <button id="case2" class="btn btn-warning me-2">Run Case 2</button>
            <button id="case3" class="btn btn-success me-2">Run Case 3</button>
        </div>
    </div>
</div>

<div id="loadingIndicator" class="alert alert-primary" style="display: none;">
    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
    Running simulation...
</div>

<div id="resultsContainer" style="display: none;">
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Test Results: <span id="resultTitle"></span></h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Movie ID:</strong> <span id="movieId"></span>
                </div>
                <div class="col-md-4">
                    <strong>Consistency:</strong> <span id="consistency" class="badge"></span>
                </div>
                <div class="col-md-4">
                    <strong>Dirty Read Detected:</strong> <span id="dirtyRead"></span>
                </div>
            </div>
            
            <h6>Transaction Timeline</h6>
            <div class="table-responsive mb-3">
                <table class="table table-sm table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Time (ms)</th>
                            <th>Node</th>
                            <th>Operation</th>
                            <th>Status</th>
                            <th>Data</th>
                        </tr>
                    </thead>
                    <tbody id="timelineTable"></tbody>
                </table>
            </div>

            <h6>Final State Across Nodes</h6>
            <div class="row" id="finalStateContainer"></div>
        </div>
    </div>
</div>

<script>

async function runCase(caseNum) {
    const isolation = document.getElementById('isolationLevel').value;
    const loadingIndicator = document.getElementById('loadingIndicator');
    const resultsContainer = document.getElementById('resultsContainer');
    
    loadingIndicator.style.display = 'block';
    resultsContainer.style.display = 'none';

    try {
        const res = await fetch(`/api/simulate?case=${caseNum}&isolation=${isolation}`);
        const data = await res.json();

        if (!data.success) {
            alert('Test failed: ' + data.error);
            loadingIndicator.style.display = 'none';
            return;
        }

        displayResults(data);

    } catch (err) {
        alert('Error: ' + err.message);
    } finally {
        loadingIndicator.style.display = 'none';
    }
}

function displayResults(data) {
    const resultsContainer = document.getElementById('resultsContainer');
    resultsContainer.style.display = 'block';

    document.getElementById('resultTitle').textContent = 
        `Case ${data.case} - ${data.isolationLevel}`;
    
    const consistencyBadge = document.getElementById('consistency');
    consistencyBadge.textContent = data.overallConsistency ? 'CONSISTENT' : 'INCONSISTENT';
    consistencyBadge.className = data.overallConsistency ? 'badge bg-success' : 'badge bg-danger';

    // Display results for each set (EVEN and ODD)
    const timelineTable = document.getElementById('timelineTable');
    timelineTable.innerHTML = '';

    const finalStateContainer = document.getElementById('finalStateContainer');
    finalStateContainer.innerHTML = '';

    if (data.sets) {
        // Multiple sets (EVEN and ODD)
        data.sets.forEach(set => {
            // Add set header
            const headerRow = document.createElement('tr');
            headerRow.className = 'table-info';
            headerRow.innerHTML = `<td colspan="5"><strong>${set.setType} ID (${set.movieId}) - Nodes: ${set.nodes.join(', ')}</strong></td>`;
            timelineTable.appendChild(headerRow);

            // Add timeline rows sorted by timestamp
            const sortedResults = [...set.results].sort((a, b) => a.timestamp - b.timestamp);
            sortedResults.forEach(r => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${r.timestamp}</td>
                    <td><span class="badge bg-secondary">${r.node}</span></td>
                    <td>${r.operation}</td>
                    <td><span class="badge ${r.status.includes('Success') ? 'bg-success' : 'bg-danger'}">${r.status}</span></td>
                    <td>${r.data || ''}</td>
                `;
                timelineTable.appendChild(row);
            });

            // Add final state for this set
            const setCard = document.createElement('div');
            setCard.className = 'col-md-6 mb-3';
            setCard.innerHTML = `
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <strong>${set.setType} ID: ${set.movieId}</strong>
                    </div>
                    <div class="card-body">
                        ${set.finalState.map(s => `
                            <div class="mb-2">
                                <span class="badge bg-info">${s.node}</span>: ${s.title || 'N/A'}
                            </div>
                        `).join('')}
                        <div class="mt-2">
                            <span class="badge ${set.consistency ? 'bg-success' : 'bg-danger'}">
                                ${set.consistency ? 'Consistent' : 'Inconsistent'}
                            </span>
                        </div>
                    </div>
                </div>
            `;
            finalStateContainer.appendChild(setCard);
        });

        // Update movie ID display to show both
        document.getElementById('movieId').textContent = 
            data.sets.map(s => `${s.setType}: ${s.movieId}`).join(', ');

    } else {
        // Old format fallback (single result)
        document.getElementById('movieId').textContent = data.movieId || 'N/A';
        
        const sortedResults = data.results ? [...data.results].sort((a, b) => a.timestamp - b.timestamp) : [];
        sortedResults.forEach(r => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${r.timestamp}</td>
                <td><span class="badge bg-secondary">${r.node}</span></td>
                <td>${r.operation}</td>
                <td><span class="badge ${r.status.includes('Success') ? 'bg-success' : 'bg-danger'}">${r.status}</span></td>
                <td>${r.data || ''}</td>
            `;
            timelineTable.appendChild(row);
        });

        data.finalState?.forEach(s => {
            const col = document.createElement('div');
            col.className = 'col-md-4 mb-2';
            col.innerHTML = `
                <div class="card">
                    <div class="card-body">
                        <h6><span class="badge bg-info">${s.node}</span></h6>
                        <p class="mb-0">${s.title || 'N/A'}</p>
                    </div>
                </div>
            `;
            finalStateContainer.appendChild(col);
        });
    }

    const dirtyReadSpan = document.getElementById('dirtyRead');
    if (data.dirtyRead !== undefined || (data.sets && data.sets.some(s => s.dirtyRead !== undefined))) {
        if (data.sets) {
            const anyDirtyRead = data.sets.some(s => s.dirtyRead);
            dirtyReadSpan.textContent = anyDirtyRead ? 'YES ' : 'NO ';
        } else {
            dirtyReadSpan.textContent = data.dirtyRead ? 'YES ' : 'NO ';
        }
        dirtyReadSpan.parentElement.style.display = 'block';
    } else {
        dirtyReadSpan.parentElement.style.display = 'none';
    }
}

document.getElementById('case1').addEventListener('click', () => runCase(1));
document.getElementById('case2').addEventListener('click', () => runCase(2));
document.getElementById('case3').addEventListener('click', () => runCase(3));
</script>
