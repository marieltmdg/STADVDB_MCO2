
<div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Movies Database</h1>
        <a href="/movies/new" class="btn btn-primary">Add New Movie</a>
</div>

<form class="mb-4" method="GET" action="/search">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" class="form-control" name="title" placeholder="Search by title" value="<%= searchQuery && searchQuery.title ? searchQuery.title : '' %>">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" name="year" placeholder="Year" value="<%= searchQuery && searchQuery.year ? searchQuery.year : '' %>">
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" name="genre" placeholder="Genre (e.g. Action,Drama)" value="<%= searchQuery && searchQuery.genre ? searchQuery.genre : '' %>">
        </div>
        <div class="col-md-2">
            <select class="form-select" name="titleType">
                <option value="">All Types</option>
                <option value="movie" <%= searchQuery && searchQuery.titleType === 'movie' ? 'selected' : '' %>>Movie</option>
                <option value="short" <%= searchQuery && searchQuery.titleType === 'short' ? 'selected' : '' %>>Short</option>
                <option value="tvSeries" <%= searchQuery && searchQuery.titleType === 'tvSeries' ? 'selected' : '' %>>TV Series</option>
                <option value="tvEpisode" <%= searchQuery && searchQuery.titleType === 'tvEpisode' ? 'selected' : '' %>>TV Episode</option>
                <option value="tvMovie" <%= searchQuery && searchQuery.titleType === 'tvMovie' ? 'selected' : '' %>>TV Movie</option>
                <option value="tvSpecial" <%= searchQuery && searchQuery.titleType === 'tvSpecial' ? 'selected' : '' %>>TV Special</option>
                <option value="tvMiniSeries" <%= searchQuery && searchQuery.titleType === 'tvMiniSeries' ? 'selected' : '' %>>TV Mini Series</option>
                <option value="documentary" <%= searchQuery && searchQuery.titleType === 'documentary' ? 'selected' : '' %>>Documentary</option>
                <option value="video" <%= searchQuery && searchQuery.titleType === 'video' ? 'selected' : '' %>>Video</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">Search</button>
        </div>
    </div>
</form>

<% if (movies && movies.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Title</th>
                    <th>Original Title</th>
                    <th>Year</th>
                    <th>Runtime</th>
                    <th>Genres</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% movies.forEach(movie => { %>
                    <tr>
                        <td><code><%= movie.id %></code></td>
                        <td><span class="badge bg-secondary"><%= movie.titleType || 'N/A' %></span></td>
                        <td><strong><%= movie.primaryTitle || 'N/A' %></strong></td>
                        <td><%= movie.originalTitle || 'N/A' %></td>
                        <td><%= movie.startYear || 'N/A' %><% if (movie.endYear) { %>-<%= movie.endYear %><% } %></td>
                        <td><%= movie.runtimeMinutes ? movie.runtimeMinutes + ' min' : 'N/A' %></td>
                        <td>
                            <% if (movie.genres) { %>
                                <% movie.genres.split(',').forEach(genre => { %>
                                    <span class="badge bg-info me-1"><%= genre.trim() %></span>
                                <% }) %>
                            <% } else { %>
                                N/A
                            <% } %>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/movies/<%= encodeURIComponent(movie.id) %>" class="btn btn-sm btn-outline-primary">View</a>
                                <a href="/movies/<%= encodeURIComponent(movie.id) %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <form method="POST" action="/movies/<%= encodeURIComponent(movie.id) %>/delete" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
    <!-- Pagination (only for regular movie list, not search results) -->
    <% if (typeof pagination !== 'undefined' && pagination && pagination.totalPages > 1) { %>
        <nav aria-label="Movies pagination" class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <small class="text-muted">
                        Showing <%= ((pagination.currentPage - 1) * 20) + 1 %> to 
                        <%= Math.min(pagination.currentPage * 20, pagination.totalMovies) %> 
                        of <%= pagination.totalMovies %> movies
                    </small>
                </div>
            </div>
            
            <ul class="pagination justify-content-center">
                <% 
                    const baseUrl = pagination.baseUrl || '/movies';
                    const urlConnector = pagination.baseUrl ? '&page=' : '?page=';
                %>
                
                <!-- First page -->
                <% if (pagination.currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= baseUrl %><%= urlConnector %>1">First</a>
                    </li>
                <% } %>
                
                <!-- Previous page -->
                <% if (pagination.hasPrev) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= baseUrl %><%= urlConnector %><%= pagination.prevPage %>">&laquo; Previous</a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link">&laquo; Previous</span>
                    </li>
                <% } %>
                
                <!-- Page numbers -->
                <% 
                    const startPage = Math.max(1, pagination.currentPage - 2);
                    const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                %>
                
                <% for (let i = startPage; i <= endPage; i++) { %>
                    <% if (i === pagination.currentPage) { %>
                        <li class="page-item active">
                            <span class="page-link"><%= i %></span>
                        </li>
                    <% } else { %>
                        <li class="page-item">
                            <a class="page-link" href="<%= baseUrl %><%= urlConnector %><%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                <% } %>
                
                <!-- Next page -->
                <% if (pagination.hasNext) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= baseUrl %><%= urlConnector %><%= pagination.nextPage %>">Next &raquo;</a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link">Next &raquo;</span>
                    </li>
                <% } %>
                
                <!-- Last page -->
                <% if (pagination.currentPage < pagination.totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= baseUrl %><%= urlConnector %><%= pagination.totalPages %>">Last</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } else if ((typeof pagination === 'undefined' || !pagination) && typeof searchQuery !== 'undefined' && searchQuery && (searchQuery.title || searchQuery.year || searchQuery.genre)) { %>
        <!-- Search results info -->
        <div class="alert alert-info mt-4">
            <h6>Search Results</h6>
            <p class="mb-0">
                Found <%= movies.length %> movie(s) matching your search criteria.
                <a href="/movies" class="btn btn-sm btn-primary ms-2">View All Movies</a>
            </p>
        </div>
    <% } %>
<% } else { %>
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No movies found!</h4>
        <p>Get started by adding your first movie to the database.</p>
        <hr>
        <a href="/movies/new" class="btn btn-primary">Add Your First Movie</a>
    </div>
<% } %>