<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Add New Movie</h1>
    <a href="/movies" class="btn btn-secondary">Back to List</a>
</div>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Movie Information</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/movies">
                    <div class="row">
                        <!-- tconst is now autoincrement, so no input field needed -->
                        <div class="col-md-6 mb-3">
                            <label for="titleType" class="form-label">Title Type</label>
                            <select class="form-select" id="titleType" name="titleType">
                                <option value="">Select type...</option>
                                <option value="movie" <%= typeof formData !== 'undefined' && formData.titleType === 'movie' ? 'selected' : '' %>>Movie</option>
                                <option value="short" <%= typeof formData !== 'undefined' && formData.titleType === 'short' ? 'selected' : '' %>>Short</option>
                                <option value="tvSeries" <%= typeof formData !== 'undefined' && formData.titleType === 'tvSeries' ? 'selected' : '' %>>TV Series</option>
                                <option value="tvEpisode" <%= typeof formData !== 'undefined' && formData.titleType === 'tvEpisode' ? 'selected' : '' %>>TV Episode</option>
                                <option value="tvMovie" <%= typeof formData !== 'undefined' && formData.titleType === 'tvMovie' ? 'selected' : '' %>>TV Movie</option>
                                <option value="tvSpecial" <%= typeof formData !== 'undefined' && formData.titleType === 'tvSpecial' ? 'selected' : '' %>>TV Special</option>
                                <option value="tvMiniSeries" <%= typeof formData !== 'undefined' && formData.titleType === 'tvMiniSeries' ? 'selected' : '' %>>TV Mini Series</option>
                                <option value="documentary" <%= typeof formData !== 'undefined' && formData.titleType === 'documentary' ? 'selected' : '' %>>Documentary</option>
                                <option value="video" <%= typeof formData !== 'undefined' && formData.titleType === 'video' ? 'selected' : '' %>>Video</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="primaryTitle" class="form-label">Primary Title *</label>
                            <input type="text" class="form-control" id="primaryTitle" name="primaryTitle" 
                                   value="<%= typeof formData !== 'undefined' ? formData.primaryTitle || '' : '' %>" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="originalTitle" class="form-label">Original Title</label>
                            <input type="text" class="form-control" id="originalTitle" name="originalTitle"
                                   value="<%= typeof formData !== 'undefined' ? formData.originalTitle || '' : '' %>">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="startYear" class="form-label">Release Year</label>
                            <input type="number" class="form-control" id="startYear" name="startYear" 
                                   value="<%= typeof formData !== 'undefined' ? formData.startYear || '' : '' %>"
                                   min="1880" max="2030" placeholder="e.g., 2023">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="endYear" class="form-label">End Year</label>
                            <input type="number" class="form-control" id="endYear" name="endYear" 
                                   value="<%= typeof formData !== 'undefined' ? formData.endYear || '' : '' %>"
                                   min="1880" max="2030" placeholder="For TV series">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="runtimeMinutes" class="form-label">Runtime (minutes)</label>
                            <input type="number" class="form-control" id="runtimeMinutes" name="runtimeMinutes" 
                                   value="<%= typeof formData !== 'undefined' ? formData.runtimeMinutes || '' : '' %>"
                                   min="1" max="1000" placeholder="e.g., 120">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="genres" class="form-label">Genres</label>
                        <input type="text" class="form-control" id="genres" name="genres" 
                               value="<%= typeof formData !== 'undefined' ? formData.genres || '' : '' %>"
                               placeholder="e.g., Action,Drama,Thriller (comma-separated)">
                        <div class="form-text">Separate multiple genres with commas</div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isAdult" name="isAdult"
                               <%= typeof formData !== 'undefined' && formData.isAdult ? 'checked' : '' %>>
                        <label class="form-check-label" for="isAdult">
                            Adult content
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create Movie</button>
                        <a href="/movies" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Guidelines</h5>
            </div>
            <div class="card-body">
                <h6>Required Fields:</h6>
                <ul class="list-unstyled">
                    <li>âœ“ Primary Title</li>
                </ul>
                <h6>ID Format:</h6>
                <p class="small mb-2">Movie IDs should start with "tt" followed by digits (e.g., tt0123456)</p>
                <h6>Genres:</h6>
                <p class="small mb-0">Common genres: Action, Adventure, Animation, Comedy, Crime, Documentary, Drama, Family, Fantasy, Horror, Music, Mystery, Romance, Sci-Fi, Thriller, War, Western</p>
            </div>
        </div>
    </div>
</div>